    <%- include partials/content.ejs %>

        <!--My Personal Info-->
        <div class="rounded float-end" ><br><br><br>
            <img src="/Assets/images/contact.png" width=60% alt="contact"><br><br><br><br>
            <h3>Sohyeon SOng</h3>
